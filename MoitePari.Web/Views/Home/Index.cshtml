@{
    ViewData["Title"] = "Welcome";
}

<div class="container py-5">
  <!-- Hero header -->
  <div class="text-center mb-5">
    <img src="~/images/moitepari_logo.png" alt="MoitePari" height="80" />
    <h1 class="mt-3">МоитеПари</h1>
    <p class="lead">Намерете най-подходящия депозит за вашите нужди</p>
  </div>

  <!-- Category widgets -->
  <div class="row g-4">

    <!-- Mortgages (placeholder) -->
    <div class="col-12 col-sm-6 col-md-4 col-lg-2">
      <div class="card h-100 text-center border-0">
        <div class="card-body">
          <i class="bi bi-house-fill display-4 text-secondary"></i>
          <h5 class="card-title mt-2">Кредити</h5>
          <a href="#" class="btn btn-outline-secondary btn-sm mt-2" tabindex="-1" aria-disabled="true">
            Сравни Оферти
          </a>
        </div>
      </div>
    </div>

    <!-- Cards (placeholder) -->
    <div class="col-12 col-sm-6 col-md-4 col-lg-2">
      <div class="card h-100 text-center border-0">
        <div class="card-body">
          <i class="bi bi-credit-card-fill display-4 text-secondary"></i>
          <h5 class="card-title mt-2">Карти</h5>
          <a href="#" class="btn btn-outline-secondary btn-sm mt-2" tabindex="-1" aria-disabled="true">
            Каталог
          </a>
        </div>
      </div>
    </div>

    <!-- Deposits (active link) -->
    <div class="col-12 col-sm-6 col-md-4 col-lg-2">
      <div class="card h-100 text-center border-0">
        <div class="card-body">
          <i class="bi bi-piggy-bank-fill display-4 text-primary"></i>
          <h5 class="card-title mt-2">Депозити</h5>
          <a asp-controller="Deposits" asp-action="Index"
             class="btn btn-primary btn-sm mt-2">
            Сравни Депозити
          </a>
        </div>
      </div>
    </div>

    <!-- Investments (placeholder) -->
    <div class="col-12 col-sm-6 col-md-4 col-lg-2">
      <div class="card h-100 text-center border-0">
        <div class="card-body">
          <i class="bi bi-graph-up-arrow display-4 text-secondary"></i>
          <h5 class="card-title mt-2">Инвестиции</h5>
          <a href="#" class="btn btn-outline-secondary btn-sm mt-2" tabindex="-1" aria-disabled="true">
            Виж Повече
          </a>
        </div>
      </div>
    </div>

    <!-- Real estate (placeholder) -->
    <div class="col-12 col-sm-6 col-md-4 col-lg-2">
      <div class="card h-100 text-center border-0">
        <div class="card-body">
          <i class="bi bi-building display-4 text-secondary"></i>
          <h5 class="card-title mt-2">Имоти</h5>
          <a href="#" class="btn btn-outline-secondary btn-sm mt-2" tabindex="-1" aria-disabled="true">
            Каталог
          </a>
        </div>
      </div>
    </div>

    <!-- Calculators (placeholder) -->
    <div class="col-12 col-sm-6 col-md-4 col-lg-2">
      <div class="card h-100 text-center border-0">
        <div class="card-body">
          <i class="bi bi-calculator display-4 text-secondary"></i>
          <h5 class="card-title mt-2">Калкулатори</h5>
          <a href="#" class="btn btn-outline-secondary btn-sm mt-2" tabindex="-1" aria-disabled="true">
            Кредитен Калк.
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
