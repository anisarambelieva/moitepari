<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="MoitePari.MainPage"
  Title="MoitePari">

  <ScrollView>
    <VerticalStackLayout
      Padding="30,0"
      Spacing="25">

      <Image
        Source="moitepari_logo.png"
        HeightRequest="100"
        Aspect="AspectFit"
        SemanticProperties.Description="MoitePari logo"/>

      <Label
        Text="MoitePari"
        Style="{StaticResource Headline}"
        SemanticProperties.HeadingLevel="Level1"/>

      <Label
        Text="Manage your deposit products"
        Style="{StaticResource SubHeadline}"
        SemanticProperties.HeadingLevel="Level2"
        SemanticProperties.Description="Manage your deposit products"/>

      <Button
        x:Name="AddDepositBtn"
        Text="Add New Deposit"
        SemanticProperties.Hint="Navigate to deposit entry form"
        Clicked="OnAddDepositClicked"
        HorizontalOptions="Fill"/>

      <Button
        x:Name="ViewDepositsBtn"
        Text="View All Deposits"
        Clicked="OnViewDepositsClicked"
        HorizontalOptions="Fill"/>

    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
